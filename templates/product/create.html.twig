{% extends 'base.html.twig' %}
{% block stylesheets %}{% endblock %}
{% block body %}
    {{ form_start(form) }}
    <div class="form-group">
        <label for="name">Name:</label>
        {{ form_widget(form.name,{
            'attr':{
                'class':'form-control',
                'style': 'width: 10%; margin-top: 10px; margin-bottom: 5px;',
                'placeholder': 'Task name'
            }
        }) }}
        <div class="invalid-feedback">
            {{ form_errors(form.name) }}
        </div>
    </div>
    <div class="form-group">
        <label for="price">Price:</label>
        {{ form_widget(form.price,{
            'attr':{
                'class':'form-control',
                'style': 'width: 10%; margin: 5px;',
                'placeholder': 'Price'
            }
        }) }}
    </div>
    <div class="form-group">
        <label for="quantity">Quantity:</label>
        {{ form_widget(form.quantity,{
            'attr':{
                'class':'form-control',
                'style': 'width: 10%; margin: 5px;',
                'placeholder': 'Quantity'
            }
        }) }}
    <div class="form-group">
        <label for="supplier">Supplier:</label>
        {{ form_widget(form.supplier,{
            'attr':{
                'class':'form-control',
                'style': 'width: 10%; margin: 5px;',
                'placeholder': 'Supplier'
            }
        }) }}
    </div>
    </div>
    <input type="submit" name="product_create" value="Create" class="btn btn-primary"/>

    <ul style='list-style: none;'>
    <li>
        <a style='color: blue;' href="{{ path('product_index') }}">Back to the list</a>
    </li>
    </ul>
    {{ form_end(form) }}
{% endblock %}


