{% extends 'base.html.twig' %}

{% block body %}
  <h1>Product and its orders</h1>
  <h4><span style="color:blue;">Product: </span>{{ product.name }}</h4>
  <h4 style="color:blue;">Orders: </h4>
  <table>
    <thead>
        <tr>
            <th>Date</th>
            <th>Customer</th>
        </tr>
    </thead>
    <tbody>
    {% for order in product.orders %}
            <tr>
                <td>{{ order.date|date('Y-m-d') }}</td>
                <td>{{ order.customer.name }}</td>
            </tr>
    {% endfor %}
    </tbody>
  </table>
  
{% endblock %}