{% extends 'base.html.twig' %}
{% block stylesheets %}{% endblock %}
{% block body %}
    <h1>Orders list</h1>

    <table>
        <thead>
        <tr>
            <th style='color: blue;'>Id</th>
            <th style='color: blue;'>Date</th>
            <th style='color: blue;'>Customer</th>
            <th style='color: blue; text-align: right;'>Actions</th>
        </tr>
        </thead>
        <tbody>
        {% for order in orders %}
            <tr>
                <td><a style="color: blue;" href="{{ path('order_show', { 'id': order.id }) }}">{{ order.id }}</a></td>
                <td style="text-align: center;">{{ order.date|date('Y-m-d') }}</td>
                {% if order.customer is not null %}
                 <td style="text-align: center;">{{ order.customer.name }}</td>
                {% else %}
                 <td>Customer not available</td>
                {% endif %}
                <td>
                    <ul>
                        <li>
                            <a style="color:blue; text-decoration: none;" href="{{ path('order_show', { 'id': order.id }) }}">show</a>
                        </li>
                        <li>
                            <a style="color:blue; text-decoration: none;" href="{{ path('order_edit', { 'id': order.id }) }}">edit</a>
                        </li>
                        <li>
                            <a style="color:blue; text-decoration: none;" onclick="return confirm('Are you sure you want to delete?')" href="{{ path('order_delete', { 'id': order.id }) }}">delete</a>
                        </li>
                    </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

<ul style='list-style: none;'>
    <li>
        <a style="color:blue;" href="{{ path('order_create') }}">Create a new order</a>
    </li>
  </ul>
{% endblock %}