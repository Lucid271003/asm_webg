{% extends 'base.html.twig' %}

{% block body %}
  <h1>Customer</h1>

  <table>
    <tbody>
    <tr>
      <th>Id</th>
      <td>{{ customer.id }}</td>
    </tr>
    <tr>
      <th>Name</th>
      <td>{{ customer.name }}</td>
    </tr>
    <tr>
      <th>Address</th>
      <td>{{ customer.address }}</td>
    </tr>
    <tr>
      <th>Phone</th>
      <td>{{ customer.phoneNumber }}</td>
    </tr>
    </tbody>
  </table>

  <ul style='list-style: none;'>
    <li>
      <a style="color:blue;" href="{{ path('customer_index') }}">Back to the list</a>
    </li>
  </ul>
{% endblock %}  